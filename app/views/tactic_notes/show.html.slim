javascript:
  document.addEventListener('DOMContentLoaded', () => {
    new Vue({
      el: "#app",
      data: {
        kifu_type_tab_index: 0,
      },
    })
  })

#app
  .breadcrumb
    ul
      li= link_to("一覧", :tactic_notes)
      li.is-active= link_to(current_record.name, "#")

  .has-text-centered
    .title.is-2.yumincho= current_record.name
  hr

  .columns
    ////////////////////////////////////////////////////////////////////////////////
    .column
      = @left_right_link
      = @detail_hash.to_html(table_class: "table is-fullwidth")
    ////////////////////////////////////////////////////////////////////////////////
    .column
      shogi_player(
        :kifu_body="'#{sample_kifu_body[:sfen]}'"
        :start_turn="0"
        :key_event_capture="true"
        :slider_show="true"
        :sfen_show="false"
        :controller_show="true"
        :theme="'#{sp_theme_default}'"
        :sound_effect="true"
        :volume=AppConfig[:volume]
        )
        = render partial: "sfen_link"

      / - content_for :head do
        / = javascript_pack_tag("shogi_player_app")
        / = stylesheet_pack_tag("shogi_player_app")

    ////////////////////////////////////////////////////////////////////////////////
    - if @board_table
      .column
        br
        .shogi-player.theme-simple.size-default
          .board_container.font_size_base
            .flippable
              .board_wrap
                .board_outer
                  = @board_table

  .columns
    .column
      b-tabs(v-model="kifu_type_tab_index")
        - sample_kifu_body.each do |key, value|
          b-tab-item(label=KifuFormatWithBodInfo[key].name)
            pre.pre-wrap= value

  / .has-text-centered
  / - count = Swars::Battle.tagged_with(current_record.name).count
  / - if count >= 1
  /   =<> link_to("将棋ウォーズ棋譜検索".html_safe +  tag.span(count, class: "badge"), [:swars_search, query: current_record.key])
  / b-pagination :total="total" :current.sync="current" :order="order" :size="size" :simple="false" :per-page="perPage"
