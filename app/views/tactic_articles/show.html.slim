/   =<> link_to("2ch棋譜検索".html_safe + tag.span(count, class: "badge"), [:resource_ns1, :general_search, query: current_record.key])
/ - count = SwarsBattleRecord.tagged_with(current_record.name).count
/ - if count >= 1
/   =<> link_to("将棋ウォーズ棋譜検索".html_safe +  tag.span(count, class: "badge"), [:resource_ns1, :swars_search, query: current_record.key])
