.columns
  .column.has-text-left
    #kifu_player_tabs_div
      label.label 棋譜
      b-tabs v-model="kifuActiveTab"
        - KifuFormatInfo.each do |e|
          b-tab-item(label=e.name)
            - if s = current_record.to_xxx(e.key)
              pre.pre-wrap= s

javascript:
  document.addEventListener('DOMContentLoaded', () => {
    new Vue({
      el: "#kifu_player_tabs_div",
      data: {
        kifuActiveTab: 0,
      }
    })
  })
