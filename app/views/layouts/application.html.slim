doctype 5
html(lang="ja" class=([params[:formal_sheet] ? "has_formal_sheet" : "", iframe? ? "iframe" : ""]))
  head
    = render partial: "layouts/head"
  body
    #single_notification_app
    - if !@simple_layout && !iframe?
      = render partial: "layouts/main_navbar"
    section.section
      .container.is-fluid.main_container
        = flash_danger_notify_tag
        = yield
        = ToolBelt::Basic.new(view_context: self).to_html
    = render partial: "layouts/footer"
    = render partial: "layouts/flash_light_notify"
    script(src="https://cdn.jsdelivr.net/npm/darkmode-js@1.3.4/lib/darkmode-js.min.js")
    javascript:
      var options = {
        bottom: '64px', // default: '32px'
        right: 'unset', // default: '32px'
        left: '32px', // default: 'unset'
        time: '0.5s', // default: '0.3s'
        mixColor: '#fff', // default: '#fff'
        backgroundColor: '#fff',  // default: '#fff'
        buttonColorDark: '#100f2c',  // default: '#100f2c'
        buttonColorLight: '#fff', // default: '#fff'
        saveInCookies: false, // default: true,
        label: 'ðŸŒ“', // default: ''
        autoMatchOsTheme: true // default: true
      }
      const darkmode = new Darkmode(options)
      darkmode.showWidget()

