.title.is-2.yumincho= "#{current_model.model_name.human}一覧"
hr

p= link_to("新規", [:new, ns_prefix, current_single_key], class: "button is-primary")

ruby:
  rows = current_records.collect { |e|
    {
      "ID" => link_to("##{e.id}", [ns_prefix, e]),
      # "先手" => e.meta_info["先手"],
      # "後手" => e.meta_info["後手"],
      "手数" => e.turn_max,
      "変換日時" => time_ago_in_words(e.created_at) + "前",
      "操作" => [
        link_to("詳細", [ns_prefix, e]),
        (link_to("編集", [:edit, ns_prefix, e]) if sysop?),
        (link_to("削除", [ns_prefix, e], method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}) if sysop?),
      ].compact.join(" ").html_safe,
    }
  }

= rows.to_html

= paginate current_records
